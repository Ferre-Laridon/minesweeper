<UserControl x:Class="View.Screens.StartScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:View.Screens"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Background>
        <ImageBrush ImageSource="../Images/background.jpeg" Opacity="0.3"/>
    </UserControl.Background>

    <Viewbox Stretch="Uniform" StretchDirection="Both">
    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock
                Text="MINESWEEPER"
                DockPanel.Dock="Left"
                FontSize="75"
                FontWeight="Bold"/>
        </DockPanel>

        <DockPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button
                Margin="20"
                DockPanel.Dock="Left"
                Width="100"
                Height="50"
                Content="5x5"
                FontSize="20"
                FontWeight="Bold"
                Background="LightGreen"
                Command="{Binding SwitchToGameScreenEasy}" />

            <Button
                Margin="20"
                DockPanel.Dock="Left"
                Width="100"
                Height="50"
                Content="10x10"
                FontSize="20"
                FontWeight="Bold"
                Background="Orange"
                Command="{Binding SwitchToGameScreenMedium}" />

            <Button
                Margin="20"
                DockPanel.Dock="Left"
                Width="100"
                Height="50"
                Content="15x15"
                FontSize="20"
                FontWeight="Bold"
                Background="Red"
                Command="{Binding SwitchToGameScreenHard}" />

            <Button
                Margin="20"
                DockPanel.Dock="Left"
                Width="100"
                Height="50"
                Content="20x20"
                FontSize="20"
                FontWeight="Bold"
                Foreground="White"
                Background="Black"
                Command="{Binding SwitchToGameScreenExtreme}" />
        </DockPanel>
        
        <DockPanel VerticalAlignment="Center" Margin="20">
            <Button 
                DockPanel.Dock="Left"
                Width="200" Height="50" 
                Content="Custom Game" 
                FontSize="20"
                FontWeight="Bold"
                Command="{Binding SwitchToSettingsScreen}" />
        </DockPanel>
        
    </StackPanel>
    </Viewbox>

</UserControl>
